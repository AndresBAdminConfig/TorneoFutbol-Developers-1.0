@page
@model TorneoFutbol.App.Frontend.Pages.Estadios.IndexModel
@{
}
<td><a class="btn btn-primary" asp-page = "./Create"> Crear Estadio </a></td>
<h1>Listado de Estadios</h1>
<table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        </tbody>
            @foreach (var estadio in Model.estadios)
            {
                <tr>
                    <td>@estadio.Nombre</td>
                    <td>@estadio.Direccion</td>
                    <td><a class="btn btn-secondary" asp-page = "./Details" asp-route-id="@estadio.Id"> Detalle </a> </td>
                </tr>
            }
        </tbody>
</table>